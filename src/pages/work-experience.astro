---
import Experience from "@/components/Experience";
import Layout from "../layouts/layout.astro";
import NotableProjects from "@/components/NotableProjects";
---

<Layout
  title="Work Experience"
  description="傑尼安的工作經歷總覽，包含前端架構設計、跨部門協作、效能優化與大型專案實作經驗。"
>
  <div class="pt-32 pb-20 px-4 container mx-auto max-w-6xl">
    <div class="text-center mb-12 animate-fade-in">
      <h1 class="text-4xl font-bold mb-4 text-primary">Work Experience</h1>
    </div>
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-8 text-primary">
        Professional Experience
      </h2>
      <Experience />
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-8 text-primary">Notable Projects</h2>
      <NotableProjects />
    </section>
  </div>
</Layout>
